<!DOCTYPE html>
<html lang="en">
  <%- include('../common/head.ejs') %>

  <body>
    <%- include('../common/adminnavbar.ejs') %> <%-
    include('../common/adminsidebar.ejs') %>

    <!-- Flash Messages -->
    <% if (sucess && sucess != '') { %>
    <div
      class="alert alert-success"
      role="alert"
      style="
        position: absolute;
        top: 50px;
        left: 50%;
        transform: translateX(-50%);
        width: 50%;
        text-align: center;
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
        border-radius: 5px;
        padding: 10px;
        z-index: 1000;
      "
    >
      <%= sucess %>
    </div>
    <% } else if (err && err != '') { %>
    <div
      class="alert alert-danger"
      role="alert"
      style="
        position: absolute;
        top: 50px;
        left: 50%;
        transform: translateX(-50%);
        width: 50%;
        text-align: center;
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        border-radius: 5px;
        padding: 10px;
        z-index: 1000;
      "
    >
      <%= err %>
    </div>
    <% } %>

    <!-- Main content area -->
    <main
      class="content"
      style="padding: 30px; background-color: #f8f9fa; min-height: 100vh"
    >
      <div
        style="
          background-color: #fff;
          padding: 20px;
          border-radius: 10px;
          box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
          max-width: 500px;
          margin: auto;
          margin-top: 50px;
          margin-bottom: 50px;
        "
      >
        <h2 style="text-align: center; color: #333">Add Testimonial</h2>
        <form
          action="<%= generateUrl('addtestimonialCreate')%>"
          method="POST"
          enctype="multipart/form-data"
        >
          <div style="margin-bottom: 15px">
            <label
              for="name"
              style="
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
                color: #555;
              "
            >
              Title:
            </label>
            <input
              type="text"
              name="title"
              id="title"
              placeholder="Enter person title"
              required
              style="
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
              "
            />
          </div>

          <div style="margin-bottom: 15px">
            <label
              for="image"
              style="
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
                color: #555;
              "
            >
              Image:
            </label>
            <input
              type="file"
              id="image"
              name="image"
              accept="image/*"
              required
              style="
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
              "
            />
          </div>

          <!-- Message Field -->
          <div class="form-group">
            <label for="exampleInputEmail1">Message</label>
            <textarea
              class="form-control"
              name="message"
              required
              placeholder="Enter testimonial message"
              id="message"
            >
            </textarea>
          </div>

          <div style="text-align: center">
            <button
              type="submit"
              style="
                padding: 10px 20px;
                background-color: #4caf50;
                color: #fff;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-size: 16px;
              "
            >
              Add
            </button>
          </div>
        </form>
      </div>
    </main>

    <script>
      ClassicEditor.create(document.querySelector("#message")).catch(
        (error) => {
          console.error(error);
        }
      );
    </script>

    <%- include('../common/footer.ejs') %>
  </body>
</html>
