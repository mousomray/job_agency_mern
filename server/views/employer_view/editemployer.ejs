<!DOCTYPE html>
<html lang="en">
  <%- include('../common/head.ejs') %>

  <body>
    <%- include('../common/adminnavbar.ejs') %> <%-
    include('../common/adminsidebar.ejs') %>

    <!-- Flash Messages -->
    <% if (sucess && sucess != '') { %>
    <div
      class="alert alert-success"
      role="alert"
      style="
        position: absolute;
        top: 50px;
        left: 50%;
        transform: translateX(-50%);
        width: 50%;
        text-align: center;
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
        border-radius: 5px;
        padding: 10px;
        z-index: 1000;
      "
    >
      <%= sucess %>
    </div>
    <% } else if (err && err != '') { %>
    <div
      class="alert alert-danger"
      role="alert"
      style="
        position: absolute;
        top: 50px;
        left: 50%;
        transform: translateX(-50%);
        width: 50%;
        text-align: center;
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        border-radius: 5px;
        padding: 10px;
        z-index: 1000;
      "
    >
      <%= err %>
    </div>
    <% } %>

    <!-- Main content area -->
    <main
      class="content"
      style="padding: 30px; background-color: #f8f9fa; min-height: 100vh"
    >
      <div
        style="
          background-color: #fff;
          padding: 20px;
          border-radius: 10px;
          box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
          max-width: 500px;
          margin: auto;
          margin-top: 50px;
          margin-bottom: 50px;
        "
      >
        <h2 style="text-align: center; color: #333">
          Edit employer
        </h2>
        <form
          action="<%= generateUrl('updateemployer', { id: employer._id }) %>"
          method="POST"
          enctype="multipart/form-data"
        >
          <div style="margin-bottom: 15px">
            <label
              for="name"
              style="
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
                color: #555;
              "
            >
              Name:
            </label>
            <input
              type="text"
              name="name"
              value="<%= employer.name %>"
              id="name"
              placeholder="Enter your name"
              required
              style="
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
              "
            />
          </div>

          <div style="margin-bottom: 15px">
            <label
              for="email"
              style="
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
                color: #555;
              "
            >
              Email:
            </label>
            <input
              type="email"
              id="email"
              name="email"
              value="<%= employer.email %>"
              placeholder="Enter your email"
              required
              style="
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
              "
            />
          </div>

          <div style="margin-bottom: 15px">
            <label
              for="city"
              style="
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
                color: #555;
              "
            >
              City:
            </label>
            <input
              type="text"
              name="city"
              value="<%= employer.city %>"
              id="city"
              placeholder="Enter your city"
              required
              style="
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
              "
            />
          </div>

          <!-- Image Upload Field -->
          <% if (employer.image) { %>
          <div class="form-group">
            <label style="font-weight: bold; color: #495057"
              >Current Image</label
            >
            <img
              src="http://localhost:3004/<%= employer.image %>"
              alt="Employee Image"
              style="
                display: block;
                max-width: 100px;
                margin-top: 10px;
                margin-bottom: 10px;
              "
            />
          </div>
          <% } %>
          <div class="form-group">
            <label for="image" style="font-weight: bold; color: #495057"
              >Upload New Image</label
            >
            <input
              type="file"
              class="form-control"
              id="image"
              name="image"
              accept="image/*"
              value="http://localhost:3004/<%= employer.image %>"
              style="
                border: 1px solid #ced4da;
                border-radius: 5px;
                padding: 5px;
              "
            />
            <small
              class="form-text text-muted"
              style="font-size: 12px; color: red"
              >If left empty, the current image will be retained.</small
            >
          </div>

          <div style="text-align: center">
            <button
              type="submit"
              style="
                padding: 10px 20px;
                background-color: #4caf50;
                color: #fff;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-size: 16px;
              "
            >
              Update
            </button>
          </div>
        </form>
      </div>
    </main>

    <%- include('../common/footer.ejs') %>
  </body>
</html>
