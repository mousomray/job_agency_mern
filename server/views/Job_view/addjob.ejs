<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../common/head.ejs') %>
  </head>

  <body>
    <div class="wrapper">
      <%- include('../common/empsidebar.ejs') %>

      <div class="main">
        <%- include('../common/empnavbar.ejs') %>

        <!-- Flash Messages -->
        <% if (sucess && sucess != '') { %>
        <div
          class="alert alert-success"
          role="alert"
          style="
            position: absolute;
            top: 50px;
            left: 50%;
            transform: translateX(-50%);
            width: 50%;
            text-align: center;
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
            border-radius: 5px;
            padding: 10px;
            z-index: 1000;
          "
        >
          <%= sucess %>
        </div>
        <% } else if (err && err != '') { %>
        <div
          class="alert alert-danger"
          role="alert"
          style="
            position: absolute;
            top: 50px;
            left: 50%;
            transform: translateX(-50%);
            width: 50%;
            text-align: center;
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            border-radius: 5px;
            padding: 10px;
            z-index: 1000;
          "
        >
          <%= err %>
        </div>
        <% } %>

        <!--Main content area-->
        <main
          class="content"
          style="padding: 20px; background-color: #f8f9fa; min-height: 100vh"
        >
          <div
            style="
              max-width: 600px;
              margin: 0 auto;
              background: #ffffff;
              padding: 20px;
              border-radius: 8px;
              box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            "
          >
            <h2 style="text-align: center; margin-bottom: 20px; color: #343a40">
              Post Job
            </h2>
            <form
              action="<%= generateUrl('addjobPost') %>"
              method="POST"
              enctype="multipart/form-data"
              style="display: flex; flex-direction: column; gap: 15px"
            >
              <!-- Title Field -->
              <div>
                <label
                  for="title"
                  style="
                    display: block;
                    font-weight: bold;
                    margin-bottom: 5px;
                    color: #495057;
                  "
                  >Job Title</label
                >
                <input
                  type="text"
                  id="title"
                  name="title"
                  placeholder="Enter job title"
                  required
                  style="
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #ced4da;
                    border-radius: 5px;
                    font-size: 16px;
                  "
                />
              </div>

              <!-- Image Upload Field -->
              <div>
                <label
                  for="image"
                  style="
                    display: block;
                    font-weight: bold;
                    margin-bottom: 5px;
                    color: #495057;
                  "
                  >Upload Image</label
                >
                <input
                  type="file"
                  id="image"
                  name="image"
                  accept="image/*"
                  required
                  style="
                    width: 100%;
                    padding: 5px;
                    border: 1px solid #ced4da;
                    border-radius: 5px;
                    font-size: 16px;
                  "
                />
              </div>

              <!-- Comapny name Field -->
              <div>
                <label
                  for="companyname"
                  style="
                    display: block;
                    font-weight: bold;
                    margin-bottom: 5px;
                    color: #495057;
                  "
                  >Company Name</label
                >
                <input
                  type="text"
                  id="companyname"
                  name="companyname"
                  placeholder="Enter Company Name"
                  required
                  style="
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #ced4da;
                    border-radius: 5px;
                    font-size: 16px;
                  "
                />
              </div>

              <!-- Category -->
              <div style="margin-bottom: 15px">
                <label
                  for="category"
                  style="
                    display: block;
                    margin-bottom: 5px;
                    font-weight: bold;
                    color: #555;
                  "
                >
                  Category:
                </label>
                <select
                  id="category"
                  name="category"
                  required
                  style="
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #ccc;
                    border-radius: 5px;
                    font-size: 16px;
                  "
                >
                  <option value="" disabled selected>
                    -- Select Category --
                  </option>
                  <option value="Accounting">Accounting</option>
                  <option value="Financing">Financing</option>
                  <option value="BPO">BPO</option>
                  <option value="Backenddeveloper">Backenddeveloper</option>
                  <option value="Frontenddeveloper">frontenddeveloper</option>
                  <option value="UIUX">UI UX designer</option>
                  <option value="Webdesigner">Webdesigner</option>
                  <option value="Digitalmarketing">Digital Marketing</option>
                </select>
              </div>

              <!-- Description Field -->
              <div class="form-group">
                <label for="exampleInputEmail1">Description</label>
                <textarea
                  class="form-control"
                  rows="10"
                  name="description"
                  required
                  placeholder="Enter job description"
                  id="description"
                >
                </textarea>
              </div>

              <!-- Responsibilities Field -->
              <div class="form-group">
                <label for="exampleInputEmail1">Responsibilities</label>
                <textarea
                  class="form-control"
                  rows="10"
                  name="responsibilities"
                  required
                  placeholder="Enter job Responsibilities"
                  id="responsibilities"
                >
                </textarea>
              </div>

              <!-- educationAndExperience Field -->
              <div class="form-group">
                <label for="exampleInputEmail1">Education And Experience</label>
                <textarea
                  class="form-control"
                  rows="10"
                  name="educationAndExperience"
                  required
                  placeholder="Enter job Responsibilities"
                  id="educationAndExperience"
                >
                </textarea>
              </div>

              <!--Vacancy-->
              <div>
                <label
                  for="vacancy"
                  style="
                    display: block;
                    font-weight: bold;
                    margin-bottom: 5px;
                    color: #495057;
                  "
                  >Vacancy</label
                >
                <input
                  type="number"
                  id="vacancy"
                  name="vacancy"
                  placeholder="Enter number of vacancy"
                  required
                  style="
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #ced4da;
                    border-radius: 5px;
                    font-size: 16px;
                  "
                />
              </div>

              <!-- Employment status -->
              <div style="margin-bottom: 15px">
                <label
                  for="employmentStatus"
                  style="
                    display: block;
                    margin-bottom: 5px;
                    font-weight: bold;
                    color: #555;
                  "
                >
                  Employment Status:
                </label>
                <select
                  id="employmentStatus"
                  name="employmentStatus"
                  required
                  style="
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #ccc;
                    border-radius: 5px;
                    font-size: 16px;
                  "
                >
                  <option value="" disabled selected>
                    -- Employment Status --
                  </option>
                  <option value="Fulltime">Fulltime</option>
                  <option value="Parttime">Parttime</option>
                  <option value="Contractual">Contractual</option>
                  <option value="Internship">Internship</option>
                </select>
              </div>

              <!-- Experience status -->
              <div style="margin-bottom: 15px">
                <label
                  for="experience"
                  style="
                    display: block;
                    margin-bottom: 5px;
                    font-weight: bold;
                    color: #555;
                  "
                >
                  Experience:
                </label>
                <select
                  id="experience"
                  name="experience"
                  required
                  style="
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #ccc;
                    border-radius: 5px;
                    font-size: 16px;
                  "
                >
                  <option value="" disabled selected>-- Experience --</option>
                  <option value="0 to 1">0 to 1 year</option>
                  <option value="1 to 5">2 to 5</option>
                  <option value="6 to 10">6 to 10</option>
                  <option value="above 10">Above 10</option>
                </select>
              </div>

              <!--Location-->
              <div style="margin-bottom: 15px">
                <label
                  for="category"
                  style="
                    display: block;
                    margin-bottom: 5px;
                    font-weight: bold;
                    color: #555;
                  "
                >
                  Location:
                </label>
                <select
                  id="location"
                  name="location"
                  required
                  style="
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #ccc;
                    border-radius: 5px;
                    font-size: 16px;
                  "
                >
                  <option value="" disabled selected>
                    -- Select Location --
                  </option>
                  <option value="Kolkata">Kolkata</option>
                  <option value="Bangaluru">Bangaluru</option>
                  <option value="Chennai">Chennai</option>
                  <option value="Odisa">Odisa</option>
                  <option value="Delhi">Delhi</option>
                  <option value="Hydrabad">Hydrabad</option>
                  <option value="Tamilnadu">Tamilnadu</option>
                  <option value="Asam">Asam</option>
                </select>
              </div>

              <div>
                <label
                  for="salary"
                  style="
                    display: block;
                    font-weight: bold;
                    margin-bottom: 5px;
                    color: #495057;
                  "
                  >Salary</label
                >
                <input
                  type="number"
                  id="salary"
                  name="salary"
                  placeholder="Enter salary"
                  required
                  style="
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #ced4da;
                    border-radius: 5px;
                    font-size: 16px;
                  "
                />
              </div>

              <!-- Radio handle -->
              <div style="margin-bottom: 15px; display: flex; gap: 10px">
                <label style="font-weight: bold; color: #555"
                  >Applied gender:</label
                >
                <label
                  ><input type="radio" name="gender" value="Any" />Any</label
                >
                <label
                  ><input type="radio" name="gender" value="Male" /> Male</label
                >
                <label
                  ><input type="radio" name="gender" value="Female" />
                  Female</label
                >
                <label
                  ><input
                    type="radio"
                    name="gender"
                    value="Others"
                  />Others</label
                >
              </div>

              <div>
                <label
                  for="applicationDeadline"
                  style="
                    display: block;
                    font-weight: bold;
                    margin-bottom: 5px;
                    color: #495057;
                  "
                  >Application Deadline</label
                >
                <input
                  type="date"
                  id="applicationDeadline"
                  name="applicationDeadline"
                  placeholder="Enter Application Deadline"
                  required
                  style="
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #ced4da;
                    border-radius: 5px;
                    font-size: 16px;
                  "
                />
              </div>

              <!-- Submit Button -->
              <div>
                <button
                  type="submit"
                  style="
                    width: 100%;
                    padding: 12px;
                    background-color: #007bff;
                    color: #ffffff;
                    border: none;
                    border-radius: 5px;
                    font-size: 16px;
                    font-weight: bold;
                    cursor: pointer;
                  "
                >
                  Add
                </button>
              </div>
            </form>
          </div>
        </main>

        <script>
          ClassicEditor.create(document.querySelector("#description")).catch(
            (error) => {
              console.error(error);
            }
          );

          ClassicEditor.create(
            document.querySelector("#educationAndExperience")
          ).catch((error) => {
            console.error(error);
          });

          ClassicEditor.create(
            document.querySelector("#responsibilities")
          ).catch((error) => {
            console.error(error);
          });
        </script>

        <%- include('../common/footer.ejs') %>
      </div>
    </div>
  </body>
</html>
